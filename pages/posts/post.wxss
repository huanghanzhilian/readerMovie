swiper{
	width:100%;
	height:600rpx;
}
swiper image{
	width:100%;
	height:600rpx;
}

.post-container{
	display: flex;
	flex-direction:column;
	margin-top:20rpx;
	margin-bottom:40rpx;
	background-color:#fff;
	border-bottom: 1px solid #ededed;
	border-top:1px solid #ededed;
	padding-bottom:5px;
}
.post-author-data{
	margin:10rpx 0 20rpx 10rpx;
}
.post-author{
	width:60rpx;
	height:60rpx;
	vertical-align:middle;
}
.post-data{
	margin-left:20rpx;
	vertical-align:middle;
	margin-bottom:5rpx;
	font-size:26rpx;
}
.post-title{
	font-size:35rpx;
    font-weight:600;
    color:#333;
    margin-bottom:10rpx;
    margin-left:20rpx;
}

.post-image{
    margin-left: 16rpx;
    width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom: 15rpx;

}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom: 20rpx;
    padding-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size:18rpx;
    flex-direction: row;
    line-height: 16rpx;
    margin-left:20rpx
}
.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align: middle;
}
.post-like-font{
    vertical-align: middle;
    margin-right: 20rpx;
}